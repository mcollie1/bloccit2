<div class="row">
  <div class="col-md-8">
    <%= render partial: 'votes/voter', locals: { topic: @topic, post: @post } %>
    <h1><%= markdown @post.title %></h1>
    <small>
      <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
      submitted <%= time_ago_in_words(@post.created_at) %> ago by 
     <%= @post.user.name %>
    </small>
    <p><%= markdown @post.body %></p>
  </div>

  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_topic_post_path(@topic,@post), class: 'btn btn-success' %>
    <% end %>
    <% if policy(@post).destroy? %>
      <%= link_to "Delete Post", [@topic, @post], method: :delete, class: 'btn btn-danger', confirm: 'Are you sure you want to delete this post?' %>
    <% end %>

     <div>
      <h3><%= pluralize(@post.points, 'point') %></h3>
      <small>
        <%= pluralize(@post.up_votes, 'up vote') %>, 
        <%= pluralize(@post.down_votes, 'down vote') %>
      </small>
    </div>
  </div>


  <div class="row">
    <div class="col-md-8">
      <h3>Comments</h3>
      <% @comments.each do |comment| %>
        <div class="media">
          <div class="media-body">
            <h4 class="media-heading">
              <%= comment.body %>
            </h4>
            <small>
              submitted <%= time_ago_in_words(comment.created_at) %> ago <br/>
            </small>
          </div>
        </div>
      <% end %>
      <%= will_paginate @comments %>
    </div>
  </div>
  <div class="col-md-4">
    <% if policy(Comment.new).create? %>
      <h4>Leave a comment</h4>
      <br/>
      <%= render partial: 'comments/comment', locals: { topic: @topic, post: @post, comment: @comment } %>
    <% end %>
</div>